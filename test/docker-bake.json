{

  "variable": {
    "CREATED": { "default": "" },
    "VERSION": { "default": "" },
    "ALPINE_BASE": { "default": "" },
    "UBUNTU_BASE": { "default": "" },
    "TAG": { "default": "" }
  },

  "group": {
    "executors": {
      "targets": ["alpine", "ubuntu"]
    }
  },
  "target": {
    "_release": {
      "labels": {
        "org.opencontainers.image.created": "${CREATED}",
        "org.opencontainers.image.authors": "nic.cheneweth@thoughtworks.com",
        "org.opencontainers.image.version": "${VERSION}",
        "org.opencontainers.image.vendor": "ThoughtWorks, Inc.",
        "org.opencontainers.image.licenses": "MIT"
      },
      "args": {
        "BUILDKIT_CONTEXT_KEEP_GIT_DIR": "1",
        "BUILDX_EXPERIMENTAL": "1",
        "BUILDKIT_SBOM_SCAN_CONTEXT": "1"
      },
      "attest": [
        "type=provenance,mode=max,version=v1",
        "type=sbom"
      ]
    },
    "alpine": {
      "dockerfile": "test/Dockerfile.alpine",
      "tags": ["ghcr.io/twplatformlabs/orb-executor-tools:alpine-${TAG}"],
      "context": ".",
      "platforms": ["linux/amd64", "linux/arm64"],
      "inherits": ["_release"],
      "labels": {
        "org.opencontainers.image.url": "https://github.com/twplatformlabs/orb-executor-tools",
        "org.opencontainers.image.documentation": "https://github.com/twplatformlabs/orb-executor-tools",
        "org.opencontainers.image.source": "https://github.com/twplatformlabs/orb-executor-tools",
        "org.opencontainers.image.title": "orb-executor-tools",
        "org.opencontainers.image.description": "test fixture image used in the orb-executor-tools ci",
        "org.opencontainers.image.base.name": "${ALPINE_BASE}"
      }
    },
    "ubuntu": {
      "dockerfile": "test/Dockerfile.ubuntu",
      "tags": ["ghcr.io/twplatformlabs/orb-executor-tools:ubuntu-${TAG}"],
      "context": ".",
      "platforms": ["linux/amd64", "linux/arm64"],
      "inherits": ["_release"],
      "labels": {
        "org.opencontainers.image.url": "https://github.com/twplatformlabs/orb-executor-tools",
        "org.opencontainers.image.documentation": "https://github.com/twplatformlabs/orb-executor-tools",
        "org.opencontainers.image.source": "https://github.com/twplatformlabs/orb-executor-tools",
        "org.opencontainers.image.title": "orb-executor-tools",
        "org.opencontainers.image.description": "test fixture image used in the orb-executor-tools ci",
        "org.opencontainers.image.base.name": "${UBUNTU_BASE}"
      }
    }
  }
}

